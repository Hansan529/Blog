extends base

block content 
  if errorMessage 
    span=errorMessage
  form(method="POST")
    input(name="url" placeholder="홈페이지 링크" type="text" required)
    input(name="name" placeholder="제목" type="text" required)
    input(name="date" placeholder="제작 날짜" type="date" required)
    input(name="thumbnail" placeholder="미리보기 이미지" type="file" required)
    input(name="languages" placeholder="사용 언어" type="text" required)
    input(name="description" placeholder="설명" type="text" required)
    input(type="submit", value="등록")